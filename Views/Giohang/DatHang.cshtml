@using MvcBookStore.Models
@model List<Giohang>

@{
    ViewBag.Title = "Đặt Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; font-size: 70px; font-weight:bold;">
    Đặt Hàng
</h2>
<h2 style="text-align:center; font-size: 70px; font-weight:bold;">
    @ViewBag.ThongBao
</h2>
<table style="width: 100%;">
    <tr>
        <th>STT</th>
        <th>Tên sách</th>
        <th>Hình ảnh</th>
        <th>Số lượng</th>
        <th>Đơn giá</th>
        <th>Thành tiền</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.iMasach </td>
            <td> @item.sTensach </td>
            <td><img src="~/Content/images/@item.sAnhbia" /></td>
            @using (Html.BeginForm("CapNhatGioHang", "Giohang", new { iMasp = item.iMasach }))
            {
                <td>
                    @item.iSoluong
                </td>
                <td>@string.Format("{0:0,0}", item.dDongia) </td>
                <td>@string.Format("{0:0,0}", item.dThanhtien) </td>
            }

        </tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red">
        <td colspan="3"> Số lượng sách: @ViewBag.Tongsoluong </td>
        <td colspan="3"> Tổng tiền: @string.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="text-align: right">
        <td colspan="6">
            @Html.ActionLink("Trở về giỏ hàng", "GioHang", "Giohang");
        </td>
    </tr>
</table>
<h2 style="text-align: center;">Nhập Thông Tin Đặt Hàng</h2>

@{ 
    KHACHHANG kh = (KHACHHANG)Session["Taikhoan"];
}

<table align="center">
    @using (Html.BeginForm())
    {
        <tr style="height: 40px">
            <td>Họ tên người nhận:</td>
            <td>
                @kh.HoTen
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Địa chỉ:</td>
            <td>
                @kh.DiachiKH
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Điện thoại:</td>
            <td>
                @kh.DienthoaiKH
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Ngày đặt:</td>
            <td>
                @DateTime.Now.ToShortDateString()
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Ngày giao hàng:</td>
            <td>
                <input type="date" name="Ngaygiao" />
            </td>
        </tr>
        <tr style="height: 40px">
            <td></td>
            <td>
                <input type="submit" name="Đồng ý đặt hàng" />
            </td>
        </tr>
    }
</table>