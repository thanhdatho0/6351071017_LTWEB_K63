<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    /* Sidebar styling */
    #sidebar {
      min-height: 100vh;
      width: 250px;
    }
    #content {
      flex: 1;
    }
    @*@media (max-width: 768px) {
      #sidebar {
        width: 100%;
        position: absolute;
        z-index: 1000;
      }
    }*@
    </style>
    @*<script src="~/Content/tinymce/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea'})</script>*@
</head>
<body>
    <div class="d-flex">
        <nav id="sidebar" class="bg-dark text-white p-3">
            <h3 class="text-center">Admin Panel</h3>
            <ul class="nav flex-column">
                <li class="nav-item">
                    @Html.ActionLink("Trang chủ", "Index", "Admin", null, new { @class = "nav-link text-white" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Quản lý chủ đề", "ChuDe", "Admin", null, new { @class = "nav-link text-white" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Quản lý Nhà xuất bản", "NhaXuatBan", "Admin", null, new { @class = "nav-link text-white" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Quản lý sách", "Sach", "Admin", null, new { @class = "nav-link text-white" })
                </li>
                <li class="nav-item">
                    @Html.Action("ThongKePartial", "ThongKe")
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div id="content" class="flex-grow-1">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand ms-3" href="#">Admin Dashboard</a>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Settings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Dashboard Content -->
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("Scripts", false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
